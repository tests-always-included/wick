#!/usr/bin/env bash
# Internal: Checks to see if a service both exists and is
# enabled.
#
# $1 - Name of the service to check.
#
# Returns true if the service is enabled.
wickServiceIsEnabled() {
    local initType service

    wickGetArgument service 0 "$@"
    wickExplorer initType wick-base init-system

    if [[ systemd == "$initType" ]]; then
        systemctl is-enabled "$service"
    elif [[ upstart == "$initType" ]]; then
        wickServiceIsEnabledSysv || wickServiceIsEnabledUpstart
    else
        wickServiceIsEnabledSysv
    fi
}
